<configuration>
    <!-- Console appender to see logs in the terminal -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the level for your specific package -->
    <logger name="com.protify.ai" level="DEBUG" />

    <!-- Set the default root level (usually INFO or WARN) -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>